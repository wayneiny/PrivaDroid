<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/permission_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/skip_bnv_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permission_screen_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/permission_surveyed_fragment"
                android:name="com.weichengcao.privadroid.ui.SurveyedFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_card_spacing"
                android:orientation="vertical">

            </fragment>

            <fragment
                android:id="@+id/permission_unsurveyed_fragment"
                android:name="com.weichengcao.privadroid.ui.UnsurveyedFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_card_spacing"
                android:orientation="vertical">

            </fragment>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/permission_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/profile_banner_left_right_padding"
        android:paddingTop="@dimen/divider_margin"
        android:paddingEnd="@dimen/profile_banner_left_right_padding"
        android:paddingBottom="@dimen/divider_margin"
        android:text="@string/permission_screen_title"
        android:textColor="@color/black"
        android:textSize="@dimen/screen_title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>