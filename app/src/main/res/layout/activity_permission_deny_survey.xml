<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_permission_deny_survey_head_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_permission_deny_survey_back_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

        <TextView
            android:id="@+id/activity_permission_deny_survey_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/divider_margin"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/divider_margin"
            android:text="@string/empty"
            android:textColor="@color/black"
            android:textSize="@dimen/screen_title_size"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_permission_deny_survey_head_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permission_deny_why_card"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_spacing"
                android:layout_marginTop="@dimen/material_card_spacing"
                android:layout_marginRight="@dimen/material_card_spacing"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/permission_deny_question_why"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="27dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:text="@string/permission_deny_question_why"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:id="@+id/permission_deny_button_why"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/select_an_option"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permission_deny_expected_card"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_spacing"
                android:layout_marginTop="@dimen/material_card_spacing"
                android:layout_marginRight="@dimen/material_card_spacing"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/permission_deny_question_expected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="27dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:text="@string/permission_question_expect_request"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:id="@+id/permission_deny_button_expected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/select_an_option"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/permission_deny_comfortable_card"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/material_card_spacing"
                android:layout_marginTop="@dimen/material_card_spacing"
                android:layout_marginRight="@dimen/material_card_spacing"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/permission_deny_question_comfortable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="27dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="20dp"
                        android:text="@string/permission_deny_question_comfortable"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:id="@+id/permission_deny_button_comfortable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/select_an_option"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/permission_deny_survey_answered_on"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/empty" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/permission_deny_submit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>