<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/event_list_item_card"
        style="@style/Widget.MaterialComponents.CardView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_card_spacing"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/material_card_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_list_item_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="27dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:text="@string/empty"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_list_item_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="27dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/empty"
                android:textSize="12sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>